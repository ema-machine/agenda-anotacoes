<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical"
    android:background="#7C609C"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agenda de anotações"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/contentbox"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_weight="1"
        android:gravity="start|top"
        android:textColor="#FFFFFF"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/txtNomeArquivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:hint="Digite o nome da agenda:"/>

    <Button
        android:id="@+id/btlimpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7C609C"
        android:text="Limpar"/>

    <Button
        android:id="@+id/btsalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7C609C"
        android:text="Salvar"/>

    <EditText
        android:id="@+id/txt_palavra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:hint="Digite a palavra-chave de sua agenda:"/>

    <Button
        android:id="@+id/btprocurar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7C609C"
        android:text="Procurar"/>

</LinearLayout>